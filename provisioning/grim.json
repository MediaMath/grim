{
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "{{user `box_basename`}}-{{user `build_timestamp`}}",
            "instance_type": "t2.small",
            "region": "{{user `aws_region`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "admin",
            "type": "amazon-ebs",
        }
    ],
    "post-processors": [
        [
            {
                "artifact": "{{ user `organization`}}/{{ user `box_basename`}}",
                "artifact_type": "amazon.ami",
                "metadata": {
                    "created_at": "{{user `build_timestamp`}}"
                },
                "type": "atlas"
            }
        ]
    ],
    "provisioners": [
        {
            "destination": "/tmp/packer-provisioner-ansible-local",
            "source": "./roles",
            "type": "file"
        },
        {
            "command": "ansible-playbook --extra-vars \"artifactory_user={{user `artifactory_user` }} artifactory_password={{user `artifactory_password`}}\"",
            "playbook_file": "./local.yml",
            "type": "ansible-local"
        }
    ],
    "push": {
        "name": "{{user `organization`}}/{{user `box_basename`}}"
    },
    "variables": {
	"artifactory_user": "{{env `ARTIFACTORY_USER`}}",
	"artifactory_password": "{{env `ARTIFACTORY_PASSWORD`}}",
	"source_ami": "ami-6f4e330a",
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_region": "us-east-1",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "box_basename": "grim",
        "build_timestamp": "{{ timestamp }}",
        "headless": "",
        "organization": "MediaMath"
    }
}
